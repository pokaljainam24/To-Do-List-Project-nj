<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Task</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #000000;
        }

        .navbar {
            background: #007bff;
        }

        .navbar-brand {
            color: #fff !important;
            font-weight: bold;
        }

        .task-container {
            background: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        }

        .list-group-item {
            border-radius: 5px;
            transition: all 0.3s;
        }

        .list-group-item:hover {
            background: #f1f1f1;
        }

        .photo{
            width: 50px;
            height: 50px;
            border-radius: 50%;
            cursor: pointer;
        }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" href="/">Task Manager</a>

            <a class="fs-3 d-flex flex-row justify-content-center align-items-center gap-2 text-light mx-5 text-decoration-none"
                href="/view"><span class="fs-5 fw-bold" style="margin-left: 900px;">View Data</span>
            </a>

            <!-- Profile Dropdown -->
            <div class="dropdown ms-auto">
                <img class="photo" src="https://avatars.githubusercontent.com/u/158015189?v=4" alt="Profile"
                    class="profile-icon dropdown-toggle" id="profileDropdown" data-bs-toggle="dropdown"
                    aria-expanded="false">

                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                    <li><a class="dropdown-item" href="/">Profile</a></li>
                    <li><a class="dropdown-item" href="#">Settings</a></li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li><a class="dropdown-item text-danger" href="/">SingUp</a></li>
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- Task List -->
    <h2 class="text-center text-light mt-5">Data List</h2>
    <% if (tasks.length===0) { %>
        <p class="text-center text-warning">No tasks available. Add a new task!</p>
        <% } else { %>
            <table class="table container table-dark table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Task</th>
                        <th scope="col" class="w-25">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% tasks.forEach((task, index)=> { %>
                        <tr>
                            <th scope="row">
                                <%= index + 1 %>
                            </th>
                            <td>
                                <%= task.task %>
                            </td>
                            <td>
                                <a href="/edit/<%= task.id %>" class="btn btn-warning btn-sm">Edit</a>
                                <form action="/delete/<%= task.id %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <% } %>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                    crossorigin="anonymous">
                    </script>
</body>

</html>